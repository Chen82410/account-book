.accountType-root {
  width: 100%;
  height: 100%;
  position: fixed;
  left: 0;
  bottom: 0;
}

.accountType-root .main-part {
  width: 100%;
}

.main-part .type {
  width: 100%;
  height: 96rpx;
  background-color: #1496db;
  display: flex;

  white-space:nowrap;
}

.type view {
  flex: 1;
  width: 33.33%;
  color: #ddd;
  display:inline-block;
  text-align: center;
  height: 96rpx;
  line-height: 96rpx;
}

.on {
  color: #fff !important;
}

.main-part .scroll-part {
  width: 100%;
  height: 520rpx;
  display: flex;
  box-sizing: border-box;
  overflow: hidden;
}

.scroll-part .pay {
  width: 100%;
  box-sizing: border-box;
  padding: 16rpx 32rpx;
}

.pay .title {
  width: 100%;
  box-sizing: border-box;
  padding: 16rpx 0;
  border-bottom: 2rpx solid #ccc;
  margin-bottom: 32rpx;
  font-size: 48rpx;
  color: #4d4d4d;
}

.pay .type-part {
  width: 100%;
  box-sizing: border-box;
  padding: 16rpx 0;
  border-bottom: 2rpx solid #ccc;
  margin-bottom: 32rpx;
  color: #4d4d4d;
  display: flex;
  flex-direction: column;
}

.type-part .type-text {
  font-size: 28rpx;
  margin-bottom: 8rpx;
  color: #ccc;
}

.pay .remark-part {
  width: 100%;
  box-sizing: border-box;
  padding: 16rpx 0;
  border-bottom: 2rpx solid #ccc;
  margin-bottom: 32rpx;
  color: #ccc;
  display: flex;
  flex-direction: column;
}

.remark-part .remark {
  font-size: 28rpx;
  margin-bottom: 8rpx;
}

.remark-part .remark-content {
  color: #4d4d4d;
  width: 100%;
  height: 60rpx;
  box-sizing: border-box;
  background-color: red;
}

.accountType-root button {
  width: 80%;
  background-color: #1496db;
  color: #fff;
  position: absolute;
  left: 10%;
  bottom: 64rpx;
}

.accountType-root button:active {
  color: #1496db;
  background-color: #fff;
}

.accountType-root .remark-textarea {
  width: 100%;
  height: 100%;
  position: absolute;
  left: 0;
  bottom: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: rgba(0, 0, 0, 0.25);
}

.remark-textarea .remark-panel {
  width: 70%;
  height: 160rpx;
  background-color: #fff;
  box-sizing: border-box;
  padding: 16rpx 32rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.remark-panel .remark-content {
  border-bottom: 1px solid #ccc;
}

.remark-panel .confirm-panel {
  margin-top: 20rpx;
  color: #4d4d4d;
  width: 100%;
  display: flex;
  flex-direction: row-reverse;
}

.confirm-panel .confirm {
  margin-left: 30rpx;
}