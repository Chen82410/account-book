/* miniprogram/pages/mine/mine.wxss */
.mine-root {
  width: 100%;
  height: 100%;
  position: fixed;
  left: 0;
  bottom: 0;
  box-sizing: border-box;
  padding: 16rpx 32rpx;
}

.mine-root .personal-msg {
  width: 100%;
  display: flex;
  align-items: center;
  box-sizing: border-box;
  padding: 16rpx 32rpx;
  border-radius: 8rpx;
  background-color: #fff;
  box-shadow: 0 4rpx 24rpx 0 rgba(12,27,48,0.06);
}

.personal-msg image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
}

.personal-msg .nickname-phone {
  display: flex;
  flex-direction: column;
  margin-left: 20rpx;
}

.nickname-phone .nickname {
  font-size: 40rpx;
  color: #4d4d4d;
  margin-bottom: 16rpx;
}

.nickname-phone .phone {
  font-size: 32rpx;
  color: #ccc;
}