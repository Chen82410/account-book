/* miniprogram/pages/home/home.wxss */
.home-root {
  width: 100%;
  height: 100%;
  position: fixed;
  left: 0;
  bottom: 0;
}

.home-bg {
  width: 100%;
  /* height: 800rpx; */
  box-sizing: border-box;
  padding: 16rpx 32rpx;  
}

.home-bg .container-part {
  width: 100%;
  /* height: 1080rpx; */
  /* box-shadow: 0 4rpx 24rpx 0 rgba(12,27,48,0.06); */
  /* border-radius: 16rpx; */
  /* position: relative; */
}

.container-part .total-account {
  width: 100%;
}

.total-account .common {
  width: 100%;
  box-sizing: border-box;
  padding: 16rpx 32rpx;
  box-shadow: 0 4rpx 24rpx 0 rgba(12,27,48,0.06);
  border-radius: 8rpx;
  margin-bottom: 16rpx;
  background-color: #fff;
}

.common .title {
  font-size: 36rpx;
  color: #4d4d4d;
  font-weight: bold;
  border-bottom: 2rpx solid rgba(12,27,48,0.06);
  padding-bottom: 8rpx;
  margin-bottom: 16rpx;
}

.common .main-content {
  width: 100%;
  display: flex;
  justify-content: space-between;
  margin-bottom: 16rpx;
}

.main-content .left {
  display: flex;
  flex-direction: column;
}

.left .top {
  font-size: 30rpx;
  margin-bottom: 8rpx;
}

.left .bottom {
  font-size: 28rpx;
  color: #1296bd;  
}

.main-content .right {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}

.right .top {
  font-size: 30rpx;
  margin-bottom: 8rpx;
}

.right .bottom {
  font-size: 28rpx;
  color: #ccc;
}

.home-bg .add-icon {
  width: 80rpx;
  height: 80rpx;
  position: absolute;
  right: 48rpx;
  bottom: 32rpx;
}