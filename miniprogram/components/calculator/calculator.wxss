/* components/calculator/calculator.wxss */
.calculator-root {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.35);
}

.calculator-panel {
  width: 100%;
  background-color: #fff;
  position: absolute;
  left: 0;
  bottom: 0;
}

.total-msg {
  width: 100%;
  height: 160rpx;
  display: flex;
  align-items: center;
  font-size: 64rpx;
  color: #1296db;
}

.unit {
  flex: 1;
  border-right: 2rpx solid #ccc;
  text-align: center;
}

.total-number {
  flex: 4;
  text-align: left;
  box-sizing: border-box;
  padding-left: 8rpx;
  padding-right: 8rpx;
  overflow-x: scroll;
}

.total-number::-webkit-scrollbar {
  display: none;
}

.main-panel {
  width: 100%;
  display: flex;
  flex-wrap: wrap;
}
.item {
  width: 25%;
  height: 120rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #4d4d4d;
  font-size: 36rpx;
}

.item:active {
  background-color: rgba(0, 0, 0, 0.25);
}

.item:last-child {
  font-size: 64rpx;
  color: #fff;
  background-color: #1296db;
}

.item:last-child:active {
  color: #1296db;
  background-color: #fff;
}